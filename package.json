{
  "name": "docker",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "docker:build": "docker build -t docker-app .",
    "docker:build-dev": "docker build --target development -t docker-app:dev .",
    "docker:build-prod": "docker build --target production -t docker-app:prod .",
    "docker:run-dev": "docker run -p 5173:5173 -v $(pwd):/app docker-app:dev",
    "docker:run-prod": "docker run -p 8080:80 docker-app:prod",
    "docker:compose-dev": "docker-compose --profile dev up",
    "docker:compose-prod": "docker-compose --profile prod up -d",
    "docker:compose-down": "docker-compose down"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.14",
    "framer-motion": "^12.23.22",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.9.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.14",
    "vite": "^7.1.7"
  }
}
